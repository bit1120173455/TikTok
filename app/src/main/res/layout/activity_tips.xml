<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_message"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:background="#c1c1ba">

            <ImageView
                android:id="@+id/leftmenu_message"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:padding="12dp"
                android:src="@drawable/user" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Title Bar"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/rightmenu_message"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentRight="true"
                android:padding="12dp"
                android:src="@drawable/setting1" />
        </RelativeLayout>
        <LinearLayout
            android:background="#c1c1ba"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="首页"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/iv_add_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/plus1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="消息"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_acvtivity"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity = "left"
        android:background="#f2f3f9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ef78c29b"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_leftmenu"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/tiktok"/>
                <TextView
                    android:id="@+id/text_leftmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Tik Tok"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="这是一款神奇的软件"
                android:textColor="#000000"
                android:textSize="18dp"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list_left_view_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp">

        </ListView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/right_activity"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_gravity = "right"
        android:background="#f2f3f9">

        <ListView
            android:id="@+id/list_right_view_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>